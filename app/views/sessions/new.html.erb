<div class="mx-auto w-50 mt-5">
    <h1 class="mb-3">Sign In</h1>

    <%= form_with url: sign_in_path do |form| %>
        <div class="mb-3">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control", placeholder: "steve@apple.com" %>
        </div>
        <div class="mb-3">
        <%= form.label :password %>
            <%= form.password_field :password, class: "form-control" %>
        </div>
        <div class="mb-3 mx-auto d-flex flex-column align-items-center">
            <%= form.submit "Sign In", class: "btn btn-primary mx-auto w-50 mb-3" %>
            <%= link_to "or create an account", sign_up_path %>
        </div>
    <% end %>
    
</div>